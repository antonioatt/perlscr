#! /usr/bin/perl -w
use IO::Handle;         #autoflush
# FH -> autoflush(1);

( @ARGV  ) ||
    die "Usage: $0  <traj_in_pdb_format>.\n";

($pdbfile)  = @ARGV;	


open ( IF, "<$pdbfile") ||
    die "Cno $pdbfile: $!.\n";

$reading = 0;

while ( <IF> ) {
    if ( /^MODEL\s+(\d+)/ ) {
	$reading = 1;
	printf "reading model $1.\n";
    } elsif ( $reading  &&  (/^ENDMDL/)  ) {
	print "model done.\n\n";
    } elsif ( $reading ) {

	$

    }
}
